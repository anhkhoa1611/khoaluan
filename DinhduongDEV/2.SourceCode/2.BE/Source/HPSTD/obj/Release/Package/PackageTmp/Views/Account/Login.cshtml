@model HDBank.Models.LoginViewModel
@using HDBank.Helpers;
@{
    var isDevice = Request.Browser.IsMobileDevice;
    ViewBag.Title = "Log in";
    Layout = null;
    var listDomain = Utilities.getDomain();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - HD Bank</title>
    <link href="@Url.Content("~/favicon1.ico")" rel="shortcut icon" type="image/x-icon" />
    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <!--basic styles-->
    <link href="@Url.Content("~/Scripts/assets/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/assets/css/bootstrap-responsive.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/font-awesome.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/ace-fonts.css")" />
    <!--ace styles-->
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/ace.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/ace-responsive.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/ace-skins.min.css")" />
    <script src="@Url.Content("~/Scripts/assets/js/ace-extra.min.js")"></script>

    <link href="~/Scripts/assets/css/chosen.css" rel="stylesheet"/>
    <script src="~/Scripts/assets/js/uncompressed/jquery-2.0.3.js"></script>
    <script src="~/Scripts/assets/js/uncompressed/chosen.jquery.js"></script>
   
    <style>
        label#recaptcha-anchor-label {
            font-size: 12px !important;
        }
        .chosen-container-single .chosen-single {
            height: 32px !important;
            padding: 3px;
        }
        .chosen-container-single .chosen-search:after
        {
            content: none;
        }
    </style>
</head>

<body class="login-layout" style="background: url('@Url.Content("~/Images/banner_HDBank_1.jpg")') no-repeat center; background-size: cover; ">
    <div class="main-container container-fluid">
        <div class="main-content">
            <div class="row-fluid">
                <div class="span12">
                    <div class="login-container">
                        <div class="space-20"></div>

                        <div class="row-fluid">
                            <div class="position-relative">
                                <div id="login-box" class="login-box visible widget-box no-border" style="margin-top:60px; padding:0;background-color:#f0f0f0">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <img style="padding-left: 10px; width: 365px; background:white" src="@Url.Content("~/Images/logo_HDbank_400.png")" />
                                        </div>
                                    </div>
                                    <div class="widget-body">
                                        <div class="widget-main" style="padding-bottom:20px;height: 270px;">
                                            <div class="space-6"></div>
                                            <img src="@Url.Content("~/Images/login_title.png")" />
                                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <fieldset>
                                                    <label>
                                                        <span style="color:red">
                                                            @Html.ValidationSummary()
                                                        </span>
                                                        <span class="block input-icon input-icon-right">

                                                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "Tên đăng nhập", @class = "span12" })
                                                            @Html.ValidationMessageFor(m => m.UserName) <i class="icon-user"></i>
                                                        </span>
                                                    </label>

                                                    <label>
                                                        <span class="block input-icon input-icon-right">
                                                            @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu", @class = "span12" })
                                                            @Html.ValidationMessageFor(m => m.Password) <i class="icon-lock"></i>
                                                        </span>
                                                    </label>

                                                    <label>
                                                        <span class="block input-icon input-icon-right">
                                                            <select name="Domain" id="Domain" class="span12" data-placeholder="Chọn Domain">
                                                                <option></option>
                                                                @foreach (var item in listDomain)
                                                                {
                                                                    <option value="@item.gia_tri">@item.gia_tri</option>
                                                                }
                                                            </select>
                                                            <i class="icon-cloud"></i>
                                                        </span>
                                                    </label>
                                                    <label class="rememberme mt-checkbox mt-checkbox-outline">
                                                        @Html.CheckBoxFor(m => m.RememberMe)
                                                        Ghi nhớ đăng nhập
                                                        <span></span>
                                                    </label>

                                                    <div class="row-fluid" >
                                                        <input type="submit" value="Đăng nhập" class="span12 btn" style="background-color:#f79433 !important;color:white !important;border:none !important;" />
                                                    </div>
                                                </fieldset>
                                            }
                                            <div class="space-2"></div>
                                        </div><!--/widget-main-->
                                    </div><!--/widget-body-->
                                </div><!--/login-box-->
                            </div><!--/position-relative-->
                        </div>
                        <div class="space-4"></div>
                        <div class="row-fluid">
                            <div class="center">
                                <p style="color:white">
                                    &copy;HDBank
                                </p>
                            </div>
                        </div>
                    </div>
                </div><!--/.span-->
            </div><!--/.row-fluid-->
        </div>
    </div><!--/.main-container-->
    <!--basic scripts-->
    <!--[if !IE]>-->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='@Url.Content("~/Scripts/assets/js/jquery-2.0.3.min.js")'>" + "<" + "/script>");
    </script>
    <script type="text/javascript">
        if ("ontouchend" in document)
            document.write("<script src='@Url.Content("~/Scripts/assets/js/jquery.mobile.custom.min.js")'>" + "<" + "/script>");
    </script>
    <script src="@Url.Content("~/Scripts/assets/js/bootstrap.min.js")"></script>
    <!--page specific plugin scripts-->
    <!--ace scripts-->
    <script src="@Url.Content("~/Scripts/assets/js/ace-elements.min.js")"></script>
    <script src="@Url.Content("~/Scripts/assets/js/ace.min.js")"></script>
    <!--inline scripts related to this page-->
    <script type="text/javascript">
        jQuery("#Domain").chosen();

        function show_box(id) {
            jQuery('.widget-box.visible').removeClass('visible');
            jQuery('#' + id).addClass('visible');
        }
    </script>
</body>
</html>